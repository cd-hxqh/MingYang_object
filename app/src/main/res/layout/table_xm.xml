<?xml version="1.0" encoding="utf-8"?>

<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="20dp">


    <TableRow android:layout_marginTop="@dimen/dimens_10">

        <LinearLayout
            android:id="@+id/id_xm_tj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/ic_xm_tj"
                android:gravity="center"
                android:text="项目台账"></TextView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/id_xm_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/ic_xm_rb"
                android:gravity="center"

                android:text="项目日报">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_xm_wt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/ic_xm_wt"
                android:gravity="center"
                android:text="问题联络单" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_xm_cc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/ic_xm_cc"
                android:gravity="center"
                android:text="出差报告" />

        </LinearLayout>

    </TableRow>




</TableLayout>