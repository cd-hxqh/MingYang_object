<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_relativelayout_id"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_heiht_size"
    android:background="@color/blue_color">

    <RelativeLayout
        android:id="@+id/title_back"
        android:layout_width="@dimen/title_heiht_size"
        android:layout_height="@dimen/title_heiht_size"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/title_back_id"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/title_choose"
        android:layout_width="46dp"
        android:layout_height="26dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/title_add"
        android:gravity="center"
        android:text="全部"
        android:textColor="@color/white"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/title_add"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimens_10"
        android:src="@mipmap/add"
        android:visibility="gone" />

    <Button
        android:id="@+id/submit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimens_10"
        android:background="@drawable/action_btn"
        android:gravity="center"
        android:minHeight="1dp"
        android:minWidth="1dp"
        android:padding="@dimen/dimen_5"
        android:text="上传"
        android:textColor="@color/default_text_color"
        android:textSize="14sp"
        android:visibility="gone" />
</RelativeLayout>
