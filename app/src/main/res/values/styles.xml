<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

    </style>

    <style name="SampleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/nomal_button_color</item>
        <item name="colorPrimaryDark">@color/nomal_button_color</item>
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    
    <style name="mingyang.ActivityTheme" parent="mingyang.AppTheme.Base">
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/mingyang.DrawerArrowStyle</item>

    </style>

    <style name="mingyang.AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_gray_1</item>
        <item name="colorPrimaryDark">@color/nomal_button_color</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="drawerArrowStyle">@style/mingyang.DrawerArrowStyle</item>
    </style>

    <style name="mingyang.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <style name="SampleTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SampleTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="spinner_style">
        <item name="android:text">40dip</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
